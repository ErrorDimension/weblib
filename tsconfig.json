{
    "compilerOptions": {
        "outDir": "js",
        // Watch
        "watch": true,
        // Libraries
        "lib": [
            "dom",
            "es7",
            "dom.iterable"
        ],
        // Options
        "allowJs": false,
        "alwaysStrict": true,
        "strict": true,
        // Module
        "allowSyntheticDefaultImports": true,
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es2022",
        // Declaration
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "ts"
    ],
    "exclude": [
        "node_modules",
    ]
}
